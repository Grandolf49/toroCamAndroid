<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:screenOrientation="portrait" 
    android:configChanges="orientation|keyboardHidden">

    <TextView
        android:id="@+id/shutterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:clickable="true"
        android:onClick="shutterButtonClick"
        android:text="@string/helvetica_"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="normal" />

    <TextView
        android:id="@+id/timelapsebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shutterbutton"
        android:layout_below="@+id/shutterbutton"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:onClick="timelapseButtonClick"
        android:text="@string/timelapse"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lightbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timelapsebutton"
        android:layout_below="@+id/timelapsebutton"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:onClick="lightButtonClick"
        android:text="@string/light_trigger"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/soundbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lightbutton"
        android:layout_below="@+id/lightbutton"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:onClick="soundButtonClick"
        android:text="@string/sound_trigger"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/devLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/soundbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        android:onClick="devLinkButtonClick"
        android:text="@string/devlink"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/sensitivityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/devLink"
        android:layout_alignLeft="@+id/devLink"
        android:layout_marginBottom="17dp"
        android:clickable="true"
        android:onClick="btOptionsButtonClick"
        android:text="@string/connect"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dripTrigButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/soundbutton"
        android:layout_below="@+id/soundbutton"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:onClick="dripTrigButtonClick"
        android:text="@string/driptrig_"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dripTrigButton"
        android:layout_below="@+id/dripTrigButton"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:onClick="hdrButtonClick"
        android:text="@string/hdr_timelapse"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>