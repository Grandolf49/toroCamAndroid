            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.rozzles.torocam.BlueControl"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_blue_control"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name="com.rozzles.torocam.core.BlueComms"
            android:enabled="true" >
